\ 'ctagstype': 'Elixir',
  \ 'kinds' : [
      \ 'f:functions',
      \ 'c:callbacks',
      \ 'd:delegates',
      \ 'e:exceptions',
      \ 'i:implementations',
      \ 'a:macros',
      \ 'm:modules',
      \ 'o:operations',
      \ 'p:protocols',
      \ 'r:records',
    \ ]
  \ }

let g:tagbar_type_ruby = {
  \ 'kinds' : [
      \ 'm:modules',
      \ 'c:classes',
